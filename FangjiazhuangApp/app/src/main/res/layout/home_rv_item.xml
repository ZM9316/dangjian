<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_rv_item_iv"
            android:layout_width="400px"
            android:layout_height="300px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="41px"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="40px"
            android:layout_marginTop="41px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_rv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是新闻标题"
                android:textColor="#d84a17"
                android:textSize="48px"/>

            <TextView
                android:id="@+id/home_rv_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:text="2017.09.12"
                android:textColor="@color/text_yellow"
                android:textSize="44px"/>

            <TextView
                android:id="@+id/home_rv_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36px"
                android:text="这是新闻内容"
                android:textColor="@color/text_black"
                android:textSize="40px"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="38px"
        android:layout_marginRight="38px"
        android:layout_marginTop="38px"
        android:background="@color/line_color"></View>
</LinearLayout>