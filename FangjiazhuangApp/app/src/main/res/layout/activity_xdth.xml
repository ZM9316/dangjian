<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xdth2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="a9chou.com.fangjiazhuangApp.module.activity.XdthActivity">

    <include layout="@layout/shyk_title"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="630px"
        android:background="#f8f5ec"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xzlrfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66px"
            android:layout_marginTop="58px"
            android:text="选择输入方式"
            android:textColor="@color/text_black"
            android:textSize="38px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/lrwz"
                style="@style/sc_style"
                android:drawableTop="@drawable/post"
                android:text="录入文字"
                />

            <TextView
                android:id="@+id/scly"
                style="@style/sc_style"
                android:drawableTop="@drawable/ht"
                android:text="上传录音"
                />

            <TextView
                android:id="@+id/scsp"
                style="@style/sc_style"
                android:drawableTop="@drawable/video"
                android:text="上传视频"
                />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/xd_item1"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/xdth_rv"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
         android:layout_height="match_parent"
 ></android.support.v7.widget.RecyclerView>

</LinearLayout>
