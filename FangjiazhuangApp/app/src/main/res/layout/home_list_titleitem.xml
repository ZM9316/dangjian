<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="80px"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/djdt_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/list_item_left_iv"
            android:layout_width="20px"
            android:layout_height="55px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:src="@color/text_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18px"
            android:layout_toRightOf="@id/list_item_left_iv"
            android:text="@string/djdt"
            android:textColor="@color/text_red"
            android:textSize="60px"/>

        <ImageView
            android:id="@+id/title_item_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="26px"
            android:layout_marginRight="42px"
            android:src="@drawable/right_back"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="18px"
        android:background="@color/line_color">


    </View>

</LinearLayout>