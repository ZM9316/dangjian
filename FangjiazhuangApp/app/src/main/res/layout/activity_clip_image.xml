    <!--圆形裁剪框示例
        app:clipBorderWidth="5dp"     ： 裁剪框边框宽度
        app:clipType="circle"         ： 裁剪框类型为圆形
        app:mHorizontalPadding="30dp" ：裁剪框距离左右边距为30dp
     -->
    <a9chou.com.fangjiazhuangApp.weight.ClipViewLayout
        android:id="@+id/clipViewLayout1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        app:clipBorderWidth="4px"
        app:clipType="circle"
        app:mHorizontalPadding="60px"/>

    <!--矩形裁剪框示例 -->
    <a9chou.com.fangjiazhuangApp.weight.ClipViewLayout
        android:id="@+id/clipViewLayout2"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:visibility="gone"
        app:clipBorderWidth="4px"
        app:clipType="rectangle"
        app:mHorizontalPadding="60px"
        />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#1C1C1C">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bt_ok"
            android:gravity="center_vertical|start"
            android:paddingEnd="0px"
            android:paddingLeft="30px"
            android:paddingRight="0px"
            android:paddingStart="30px"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="45px"/>

        <TextView
            android:id="@+id/bt_ok"
            android:layout_width="160px"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|end"
            android:paddingEnd="30px"
            android:paddingLeft="0px"
            android:paddingRight="30px"
            android:paddingStart="0px"
            android:text="选取"
            android:textColor="#ffffff"
            android:textSize="45px"/>
    </RelativeLayout>


