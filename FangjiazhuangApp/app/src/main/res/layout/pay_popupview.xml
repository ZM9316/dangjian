<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/btn_camera"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="#e3542a"
        android:gravity="center_vertical"
        android:paddingLeft="56px"
        android:text="选择支付方式"
        android:textColor="#ffffff"
        android:textSize="42px"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#888888"/>


    <RelativeLayout
        android:id="@+id/wei_chat"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/wei_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="58px"
            android:src="@drawable/wx"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@id/wei_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="微信支付"
                android:textColor="#333333"
                android:textSize="46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="使用微信支付,安全便捷"
                android:textColor="#888888"
                android:textSize="30px"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/wx_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:src="@drawable/dui0"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f0f0f0"/>

    <RelativeLayout
        android:id="@+id/a_li"
        android:layout_width="match_parent"
        android:layout_height="210px"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/ali_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="58px"
            android:src="@drawable/ali"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60px"
            android:layout_toRightOf="@id/ali_iv"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textColor="#333333"
                android:textSize="46px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="支持有支付宝,网银的用户使用"
                android:textColor="#888888"
                android:textSize="30px"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ali_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="60px"
            android:src="@drawable/dui0"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f0f0f0"></View>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="136px"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingLeft="61px"
        android:text="需支付：¥200"
        android:textColor="#e3542a"
        android:textSize="42px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#f0f0f0"></View>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3542a"
        android:gravity="center"
        android:text="支付"
        android:textColor="#ffffff"/>
</LinearLayout>