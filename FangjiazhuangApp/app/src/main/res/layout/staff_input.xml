<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/huiyiliebiao_rc">

    <include layout="@layout/menber_list"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <!--<TextView-->
            <!--android:id="@+id/textView3"-->
            <!--style="@style/more_text_style"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="24dp"-->
            <!--android:layout_marginStart="24dp"-->
            <!--android:text="TextView" />-->

        <TextView
            android:id="@+id/attend_tv"
            style="@style/more_text_style"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_above="@+id/attend_rl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center|left"
            android:text="" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:background="@color/line_color"
            android:id="@+id/view">
        </View>

        <!--<TextView-->
            <!--android:id="@+id/tishi"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_above="@+id/view"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:gravity="left"-->
            <!--android:text=""-->
            <!--android:textColor="@color/text_red"-->
            <!--android:textSize="45px" />-->

        <RelativeLayout
            android:id="@+id/attend_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp">

            <EditText
                android:id="@+id/attend_et"
                style="@style/more_text_style"
                android:layout_width="280dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:ems="10"
                android:gravity="center|left"
                android:hint="请输入列席人员姓名"
                android:inputType="textPersonName"
                android:text=""
                android:textSize="35px" />

            <Button
                android:id="@+id/btn"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/shopinfo"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="35px" />
        </RelativeLayout>

        <Button
            android:id="@+id/clear"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/attend_tv"
            android:layout_alignBottom="@+id/attend_tv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shopinfo"
            android:text="清空"
            android:textColor="@color/white"
            android:textSize="35px" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/no_net"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <include
            layout="@layout/net_not_work"
            >
        </include>


    </LinearLayout>

</LinearLayout>